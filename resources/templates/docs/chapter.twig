{% extends "docs/main.twig" %}

{% block title %}Codice Docs: {{ title }}{% endblock %}

{% block docs_content %}
<div class="modal fade" id="edit_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" >&times;</button>
        <h4 class="modal-title" id="myModalLabel">{{ title }}: edit page</h4>
      </div>
      <div class="modal-body">
        Which version of documentation would you like to edit? Choose <strong>v{{ version }}</strong> if change should apply
        only to documentation for this version of Codice or <strong>master</strong> if it's related to all versions.
      </div>
      <div class="modal-footer">
        <a href="{{ github_url }}/edit/v/{{ version }}/{{ chapter }}.md" class="btn btn-default">Edit v{{ version }}</a>
        <a href="{{ github_url }}/edit/master/{{ chapter }}.md" class="btn btn-primary">Edit master</a>
      </div>
    </div>
  </div>
</div>

<div class="docs-chapter-header">
    <button type="button" class="btn-link pull-right" data-toggle="modal" data-target="#edit_modal"><span class="fa fa-pencil"></span> Edit this page</button>
    <h2>{{ title }}</h2>
</div>

{{ contents|raw }}
{% endblock %}
